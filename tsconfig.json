{
  "include": [
      "./src/**/*",
  ],
  "exclude": [
      "node_modules",
      "specs"
  ],
  "compilerOptions": {
      "target": "es5",
      "experimentalDecorators": true,
      "module": "commonjs",
      "lib": [
        "es6",
        "dom"
      ],
      "allowJs": false,
      "outDir": "build",
      "rootDir": ".",
      "strict": false,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "emitDecoratorMetadata": true,
      
  }
}